<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/positionMan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/purple_200"
        >
    </TextView>


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/positionMan"
        android:layout_alignStart="@id/positionMan"
        android:background="@color/purple_500"
        >
    </TextView>



    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/positionMan"
        android:layout_alignStart="@id/positionMan"
        android:background="@color/purple_500"
        >
    </TextView>



    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/positionMan"
        android:layout_toStartOf="@id/positionMan"
        android:background="@color/black"
        >
    </TextView>


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/positionMan"
        android:layout_toLeftOf="@id/positionMan"
        android:background="@color/teal_200"
        >
    </TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/positionMan"
        android:layout_toLeftOf="@id/positionMan"
        android:background="@color/teal_200"
        >
    </TextView>



    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/positionMan"
        android:layout_toRightOf="@id/positionMan"
        android:background="@color/teal_200"
        >
    </TextView>


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@id/positionMan"
        android:layout_toRightOf="@id/positionMan"
        android:background="@color/black"
        >
    </TextView>


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/positionMan"
        android:layout_toRightOf="@id/positionMan"
        android:background="@color/teal_200"
        >
    </TextView>






</RelativeLayout>